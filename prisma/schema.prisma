// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Certificate {
  id             String  @id @default(cuid())
  title          String
  image          String
  description    String
  diberikan      String
  berlaku        String
  id_certificate String?
  issuer         String  @map("by")
  slug           String  @unique
}

model Career {
  id         String    @id @default(cuid())
  name       String
  logo       String
  link       String?
  profession String
  location   String
  startDate  DateTime? // tanggal mulai
  endDate    DateTime? // null kalau masih aktif
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Project {
  id          String  @id @default(cuid())
  title       String
  description String
  slug        String  @unique
  link_demo   String
  link_github String
  image       String
  is_show     Boolean
  is_featured Boolean
  aos_delay   Int
  params_slug String

  techStacks ProjectTechStack[]
}

model TechStack {
  id        String   @id @default(cuid())
  title     String
  iconName  String
  iconType  IconType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects ProjectTechStack[]
}

model ProjectTechStack {
  id          String    @id @default(cuid())
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
  techStack   TechStack @relation(fields: [techStackId], references: [id])
  techStackId String

  @@unique([projectId, techStackId])
  @@index([projectId])
  @@index([techStackId])
}

// Model Education BARU, berdasarkan dummy data Anda
model Education {
  id        String   @id @default(cuid())
  title     String
  logo      String
  href      String?
  year      String
  school    String
  gtw       String?
  jurusan   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum IconType {
  REACT_ICON
  IMAGE_URL
}
